<div class="container">
  <div class="row">
    <div class="col-3"></div>
    <div class="col-6">
      <h1>Burgers!</h1>
    </div>
  </div>
<br>
  <div class="row">
    <div class="col-3"></div>

    <div class="col-6">
      <h2>Add a Burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="burger">Burger Name:</label>
          <input type="text" id="burger" name="name">
        </div>

        <div class="form-group">
          <label for="devoured">Is it devoured already?</label><br>
          <input type="radio" name="devoured" value="1" checked> Devoured!<br>
          <input type="radio" name="devoured" value="0"> Still Available
        </div>

        <button type="button" class="submit btn btn-secondary">Add Burger!</button>
      </form>
    </div>
  </div>


  <div class="row">
    <div class="col-5">
      <h2>Burgers available!</h2>

      <ol>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ol>
    </div>

    <div class="col-2"></div>

    <div class="col-5">
      <h2>Devoured Burgers!</h2>

      <ol>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/if}}
        {{/each}}
      </ol>
    </div>
  </div>

  <br> <br>

</div>